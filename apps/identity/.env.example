# AgentKern Identity Configuration

# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=agentkern
DATABASE_PASSWORD=agentkern_secret_change_me
DATABASE_NAME=agentkern_identity
DATABASE_SYNC=false
DATABASE_LOGGING=false
DATABASE_SSL=false

# Server
PORT=3001
NODE_ENV=production
IDENTITY_URL=http://localhost:3001

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3001,http://localhost:5173

# Rate Limiting
RATE_LIMIT_SHORT=10
RATE_LIMIT_MEDIUM=50
RATE_LIMIT_LONG=200

# Mesh Network
MESH_NODE_TYPE=FULL
MESH_BOOTSTRAP_NODES=wss://mesh-1.agentkern.io:8080,wss://mesh-2.agentkern.io:8080

# Enterprise Features (set license key to enable)
# AGENTKERN_LICENSE_KEY=your-license-key-here
# EE_LICENSE_SERVICE_URL=https://ee.agentkern.io/v1/license

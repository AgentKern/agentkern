# AgentProof Docker Configuration

# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=agentproof
DATABASE_PASSWORD=agentproof_secret_change_me
DATABASE_NAME=agentproof
DATABASE_SYNC=true
DATABASE_LOGGING=false
DATABASE_SSL=false

# Server
PORT=3000
NODE_ENV=production

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_SHORT=10
RATE_LIMIT_MEDIUM=50
RATE_LIMIT_LONG=200

# Mesh Network
MESH_NODE_TYPE=FULL
MESH_BOOTSTRAP_NODES=wss://mesh-1.agentproof.io:8080,wss://mesh-2.agentproof.io:8080

# Enterprise Features (set license key to enable)
# LICENSE_KEY=your-license-key-here
